---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const images = [
  "/galeriaInvernadero/img-1.webp",
  "/galeriaInvernadero/img-2.webp",
  "/galeriaInvernadero/img-3.webp",
  "/galeriaInvernadero/img-4.webp",
  "/galeriaInvernadero/img-5.webp",
  "/galeriaInvernadero/img-6.webp",
];
---

<Layout title="Gallery - InvernaTec">
  <Header />
  <main
    class="min-h-screen flex justify-center items-center flex-col gap-10 mb-10"
  >
    <h1 class="font-bold uppercase text-4xl mb-8 text-white mt-10">
      Project Gallery
    </h1>
    <div class="container mx-auto p-4">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      >
        {
          images.map((src) => (
            <div class="relative">
              <img
                src={src}
                alt="Gallery Image"
                class="w-full h-full object-cover rounded-lg shadow-lg transition transform hover:scale-105"
              />
            </div>
          ))
        }
      </div>
    </div>
  </main>
  <Footer />
</Layout>
